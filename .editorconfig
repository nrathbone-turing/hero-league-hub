# .editorconfig
# Global coding style for Hero League Hub
# Ensures consistent indentation, line endings, and whitespace across editors

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Default indentation (frontend + misc)
indent_style = space
indent_size = 2

# Python backend (Flask)
[*.py]
indent_style = space
indent_size = 4

# JSON, YAML, and Markdown use 2 spaces
[*.{json,yml,yaml,md}]
indent_size = 2

# HTML, CSS, JS, JSX, TSX follow frontend conventions
[*.{html,css,js,jsx,ts,tsx}]
indent_size = 2

# Makefiles must use tabs
[Makefile]
indent_style = tab
