{
  "type": "module",
  "name": "hero-league-hub",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "lint:backend": "node backend/scripts/run-helper.js lint:backend",
    "lint:frontend": "node backend/scripts/run-helper.js lint:frontend",
    "lint": "node backend/scripts/run-helper.js lint",

    "format:backend": "node backend/scripts/run-helper.js format:backend",
    "format:frontend": "node backend/scripts/run-helper.js format:frontend",
    "format": "node backend/scripts/run-helper.js format",

    "fix:backend": "npm run format:backend && npm run lint:backend",
    "fix:frontend": "npm run format:frontend && npm run lint:frontend",
    "fix": "npm run format && npm run lint",

    "test:backend": "node backend/scripts/run-helper.js backend",
    "test:frontend": "npm --prefix frontend run test",
    "test": "node backend/scripts/run-helper.js test && npm --prefix frontend run test",
    
    "test:full": "npm run docker:rebuild && npm run db:upgrade && npm run db:seed && npm test",

    "db:init": "node backend/scripts/run-helper.js db:init",
    "db:migrate": "node backend/scripts/run-helper.js db:migrate",
    "db:upgrade": "node backend/scripts/run-helper.js db:upgrade",
    "db:seed": "node backend/scripts/run-helper.js db:seed",
    "db:reset": "node backend/scripts/run-helper.js db:reset",
    "db:refresh": "npm run db:reset",

    "start:frontend": "npm --prefix frontend run dev",
    "start:backend": "pipenv run python backend/wsgi.py",
    "dev:all": "npm run docker:rebuild && npm run start:frontend",

    "docker:rebuild": "docker compose down && docker compose up --build -d",

    "env:test": "cross-env FLASK_ENV=test TEST_DATABASE_URL=postgresql://postgres:postgres@db:5432/heroleague_test",
    "env:local": "cross-env FLASK_ENV=development DATABASE_URL=postgresql://postgres:postgres@localhost:5432/heroleague",

    "deps:sync": "pipenv requirements > backend/requirements.txt",
    "deps:update": "pipenv update"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint-plugin-vitest-globals": "^1.5.0",
    "history": "^5.3.0",
    "jsdom": "^27.0.0"
  }
}
